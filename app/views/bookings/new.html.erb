<%= form_with model: @booking do |form| %>
  Passengers:<br>
  <%= form.fields_for :passengers do |pax_details| %>
      <%= pax_details.label :name, "Enter your name"%>
      <%= pax_details.text_field :name%>
      <%= pax_details.label :email, "Enter your email"%>
      <%= pax_details.text_field :email%><br>
  <% end %>
  <%= form.hidden_field :flight_id, value: @flight_id %>
  <%= form.submit "Submit" %>
<% end %>

